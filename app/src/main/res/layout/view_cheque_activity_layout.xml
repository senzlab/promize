<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/white"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/MyMaterialTheme" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        android:fillViewport="true"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@color/white"
            android:orientation="vertical">

            <EditText
                android:id="@+id/view_cheque_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_text_border_bottom"
                android:clickable="false"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:hint="User"
                android:inputType="text"
                android:maxLength="12"
                android:paddingBottom="10dp"
                android:textColor="@color/android_grey"
                android:textColorHint="#ABABAB"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/view_cheque_amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"

                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edit_text_border_bottom"
                android:clickable="false"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:hint="Amount"
                android:inputType="numberDecimal"
                android:maxLength="10"
                android:paddingBottom="10dp"
                android:textColor="@color/android_grey"
                android:textColorHint="#ABABAB"
                android:textSize="25sp" />

            <EditText
                android:id="@+id/view_cheque_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:clickable="false"
                android:enabled="false"
                android:focusableInTouchMode="false"
                android:hint="Date"
                android:inputType="date"
                android:maxLength="16"
                android:paddingBottom="10dp"
                android:textColor="@color/android_grey"
                android:textColorHint="#ABABAB"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="25sp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/view_cheque_send"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/rounded_corner_button"
                        android:text="Preview"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/view_cheque_deposit"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/view_cheque_send"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_corner_button"
                        android:text="Deposit"
                        android:textColor="@color/white" />

                    <Button
                        android:id="@+id/view_cheque_transfer"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_below="@+id/view_cheque_deposit"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="15dp"
                        android:background="@drawable/rounded_corner_button"
                        android:text="Transfer"
                        android:textColor="@color/white" />
                </RelativeLayout>

            </FrameLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>