<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        app:popupTheme="@style/MyMaterialTheme" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/hi_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/registering_user_id"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="You need to set up a Sampath bank account in order to send an iGift. Please note that if you do not have a Sampath bank account, you cannot Send an iGift. You can however Receive."
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/welcome_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_above="@+id/registering_user_id"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:text="Please note that, if you don't have a sampath bank account, you cannot send iGifts. You can only receive iGifts :)"
                android:textColor="@color/white"
                android:textSize="28sp"
                android:visibility="visible" />

            <EditText
                android:id="@+id/registering_user_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/edit_text_border_bottom"
                android:hint="Vishwa account"
                android:inputType="number"
                android:maxLength="12"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#ABABAB"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/registering_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edit_text_border_bottom"
                android:hint="Password"
                android:inputType="textPassword"
                android:maxLength="10"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#ABABAB"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="25sp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/registering_confirm_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="35dp"
                android:background="@drawable/edit_text_border_bottom"
                android:hint="Confirm password"
                android:inputType="textPassword"
                android:maxLength="16"
                android:paddingBottom="10dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="#ABABAB"
                android:textCursorDrawable="@drawable/cursor_drawable"
                android:textSize="25sp"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:visibility="visible">

        <Button
            android:id="@+id/yes"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:background="@drawable/rounded_corner_button"
            android:text="Ok"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/no"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/yes"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rounded_corner_button"
            android:text="Cancel"
            android:textColor="@color/white" />
    </RelativeLayout>


</LinearLayout>